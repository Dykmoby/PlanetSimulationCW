<Window x:Class="PlanetSimulationCW.ControlPanelWindow"
        x:Name="controlPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlanetSimulationCW"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Control Panel" Height="450" Width="250">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Content="{Binding PauseButtonText, FallbackValue='Pause'}" Margin="20,15,20,5" Command="{Binding ToggleSimulationCommand}"/>
        </StackPanel>
    </Grid>
</Window>
